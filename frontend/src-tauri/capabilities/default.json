{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:app:allow-default-window-icon",
    "core:path:default",
    "core:tray:default",
    "notification:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$DOWNLOAD/*" }, { "path": "$DOWNLOAD/Contacts/*" }]
    }
  ]
}
